<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddNewShift">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:id="@+id/lin1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:orientation="vertical">
    
    
    


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new Shift"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#0A0A0A"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:background="@drawable/edt_txt_border"
 >
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myspinner"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/black"


            >

        </Spinner>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="40dp">




        <TextView
            android:id="@+id/txtStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_timer_black_24dp"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:text="Set Start Time"
            android:background="@drawable/edt_txt_border"
            android:padding="5dp"
          >

        </TextView>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <TextView
            android:id="@+id/txtEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_timer_off_black_24dp"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_txt_border"
            android:padding="5dp"

            android:text="Set End Time">

        </TextView>


    </LinearLayout>





</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lin1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/edt_txt_border"
        android:orientation="vertical">


        <TextView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:text="Menu"
            android:layout_marginLeft="20dp">


        </TextView>


        <GridView
            android:id="@+id/gridview"
            android:numColumns="2"
            android:verticalSpacing="1dp"
            android:layout_marginTop="10dp"
            android:background="#e5e5e5"
            android:layout_marginLeft="10dp"
            android:horizontalSpacing="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </GridView>



    </LinearLayout>













</androidx.constraintlayout.widget.ConstraintLayout>